generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum platform {
  google
  github
  default
}

enum activeStatus {
  loggedout
  active
}

model user {
  id                 String               @id() @default(uuid())
  username           String
  email              String
  platform           platform             @default(default)
  verified           Boolean              @default(false)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @default(now())
  userSessionDevices userSessionDevices[]
  loginCodes         loginCodes[]
  workspace          workspace[]
  workspaceUsers     workspaceUsers[]
}

model userSessionDevices {
  id        String       @id() @default(uuid())
  OS        String
  ip        String
  status    activeStatus
  createdAt DateTime     @default(now())
  updatedAt DateTime     @default(now())
  user      user         @relation(fields: [userId], references: [id])
  userId    String
}

model loginCodes {
  id        String   @id() @default(uuid())
  code      String
  user      user     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  isExpired Boolean  @default(false)
}

model workspace {
  id             String           @id @default(uuid())
  name           String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @default(now())
  user           user             @relation(fields: [createdBy], references: [id])
  createdBy      String
  workspaceUsers workspaceUsers[]

  @@unique([createdBy,name],name:"workspace_name_unique")
}

model workspaceUsers {
  id          String    @id @default(uuid())
  workspace   workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String
  user        user      @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())

  @@unique([workspaceId,userId],name:"workspace_user_unique")
}
